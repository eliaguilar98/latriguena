<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_sale_form" model="ir.ui.view">
        <field name="name">sale.report.wizard.form</field>
        <field name="model">report.sale.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Sale Details">
                <group>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="date_creation"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_report_sales" model="ir.actions.act_window">
        <field name="name">Sales Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.sale.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_sale_form"/>
        <field name="target">new</field>
    </record>
</odoo>